<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.statiq</id>
  <name>Statiq Support</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://github.com/matkoch/resharper-statiq">Dave Glick, Matthias Koch</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Adds live templates for Statiq</p>
]]>
  </description>

  <extensions defaultExtensionNs="com.intellij">
    <defaultLiveTemplates file="/liveTemplates/Markdown.xml"/>
    <liveTemplateContext implementation="com.jetbrains.rider.plugins.statiq.MarkdownContext"/>
  </extensions>

</idea-plugin>
