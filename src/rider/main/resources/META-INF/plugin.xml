<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.statiq</id>
  <name>Statiq Support</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://github.com/matkoch/resharper-statiq">Dave Glick, Matthias Koch</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Support plugin for <a href="https://statiq.dev/">Statiq</a>. A powerful platform for generating static site content.
<ul>
  <li>
    <a href="https://www.jetbrains.com/help/rider/Using_Live_Templates.html">Live templates in Markdown files
    <ul>
      <li><a href="https://getbootstrap.com/docs/4.0/content/figures/">Bootstrap Figures</a>: <code>figure</code></li>
      <li><a href="https://getbootstrap.com/docs/4.0/components/alerts/">Bootstrap Alerts</a>: <code>primary</code>, <code>secondary</code>, <code>success</code>, <code>danger</code>, <code>warning</code>, <code>info</code>, <code>light</code>, <code>dark</code></li>
    </ul>
  </li>
</ul>
]]>
  </description>

  <extensions defaultExtensionNs="com.intellij">
    <defaultLiveTemplates file="/liveTemplates/Markdown.xml"/>
    <liveTemplateContext implementation="com.jetbrains.rider.plugins.statiq.MarkdownContext"/>
  </extensions>

</idea-plugin>
